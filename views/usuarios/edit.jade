extends ../layout

block content
  h1 Alterar de Usuario
  hr
  a(href="/usuarios" title="Voltar") Voltar
  br
  br
  form(method="POST", action="/usuarios/edit/#{value._id}", role="form")
    input(type="hidden" name="_method" value="put")
    div(class="form-group")
      label Nome:
      input(type="text", name="nome", class="form-control", value="#{value.nome}")
    div(class="form-group")
      label Login:
      input(type="text", name="user_name", class="form-control" value="#{value.user_name}")
    div(class="form-group")
      label Senha:
      input(type="password", name="senha", class="form-control" value="#{value.senha}")
    input(type="submit", value="Atualizar", class="btn btn-sucess")
    a(href="/usuarios/delete/#{value._id}" title="Delete" class="btn btn-primary") Deletar
